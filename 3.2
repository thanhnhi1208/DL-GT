	do{
		printf ("nhap mang 0<n>100");
		scanf("%d",&n);
	}while (n<1||n>100);
	for (int i=0;i<n;i++){
		printf("a[%d]=",i);
		scanf("%d",&a[i]);
}
}
void xuatmang(int a[],int n){
	printf("\tmang vua nhap:	");
	for(int i=0;i<n;i++){
		printf("\t%d",a[i]);
	}
}
void giamdan(int a[],int &n){
	for(int i=0;i<n-1;i++){
		for(int j=i;j<n;j++){
			if(a[i]<a[j]){
				int temp=a[i];
				a[i]=a[j];
				a[j]=temp;
			
			}
		}
	}
}
void xuatgiamdan(int a[],int n){
	for(int i=0;i<n;i++){
		printf("\t%d",a[i]);
	}
}
int main(){
	int n,a[100];
	nhapmang(a,n);
	xuatmang(a,n);
	giamdan(a,n);
	printf("\n\tgiam dan:");
	xuatgiamdan(a,n);
}
